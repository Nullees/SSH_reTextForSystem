<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>  
	<!-- 每个class对应一个持久化对象 -->
	<class name="com.edu.po.Teacher">
		<!-- id元素用来定义主键标示，并制定主键生成策略 -->
		<id name="t_no">
			<generator class="assigned"></generator>
		</id>
		
		<!-- 定义其他属性 -->
		<property name="t_name"></property>
		<property name="t_gender"></property>
		<property name="t_birth"></property>
		<property name="t_phone"></property>
		<property name="t_identity"></property>
		<property name="t_department"></property>
		<property name="t_post"></property>
		<property name="t_password"></property>
		<property name="t_uploadhomework"></property>
		<property name="t_uploadcoursematerial"></property>
		<property name="t_repassword"></property>
	</class>
</hibernate-mapping>  
